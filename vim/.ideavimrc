"Remaps Esc to jk key"
imap jk <Esc>
imap kj <Esc>

nmap ; :
noremap ;; ;
""" nnoremap ss i<space><Esc>
nnoremap zzz :wq<cr>
nnoremap zz :w<cr>
nnoremap noh :noh<cr>

""" Map leader to space ---------------------
let mapleader=" "

" Tab and S-Tab to indent/unindent in visual mode.
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv
nnoremap <Tab> >>
noremap <S-Tab> <<

set easymotion
set surround
set NERDTree
set multiple-cursors
set commentary
set ReplaceWithRegister
set argtextobj
set exchange
set textobj-entire
set highlightedyank
set vim-paragraph-motion
set textobj-indent
set matchit
set which-key

set notimeout
set timeoutlen = 5000

""" Plugins  --------------------------------
set clipboard=unnamedplus
set ignorecase
set smartcase

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"
let g:highlightedyank_highlight_duration = "1000"
let g:highlightedyank_highlight_color = "rgba(160, 160, 160, 155)"

""" Common settings -------------------------
set showmode
set so=5
set incsearch
set nu
set number
set relativenumber
set hlsearch

""" Idea specific settings ------------------
set ideajoin
set ideamarks
set idearefactormode=keep
set ideastatusicon=gray

""" Mappings --------------------------------
map <leader>f <Plug>(easymotion-s)
map <leader>e <Plug>(easymotion-f)

map <leader><leader> <Action>(GotoAction)
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>c <Action>(Stop)
map <leader>d <Action>(Debug)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <leader>o <Action>(FileStructurePopup)
map <leader>r <Action>(RenameElement)
map <leader>z <Action>(ToggleDistractionFreeMode)

""" Jupyter notebook mappings
map \ra <Action>(NotebookRunAllAction)



map <C-m> <Action>(MoveEditorToOppositeTabGroup)
map <C-o>d <Action>(NotebookDeleteCellAction)

map blame <Action>(Annotate)
map max <Action>(MaximizeEditorInSplit)

" unimpaired mappings
nnoremap [<space> O<esc>j
nnoremap ]<space> o<esc>k

nnoremap [q :action PreviousOccurence<cr>
nnoremap ]q :action NextOccurence<cr>
nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>
nnoremap [c :action VcsShowPrevChangeMarker<cr>
nnoremap ]c :action VcsShowNextChangeMarker<cr>
